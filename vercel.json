{
  "version": 2,

  "builds": [
    { "src": "public/index.php", "use": "@vercel/php" },

    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],

  "routes": [
    { "src": "/storage/(.*)", "dest": "/public/storage/$1" },

    { "handle": "filesystem" },

    { "src": "/(.*)", "dest": "/public/index.php" }
  ]
}