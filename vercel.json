{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.8.1"
    }
  },

  "routes": [
    { "handle": "filesystem" },
    {
      "src": "^/build/(.*)$",
      "dest": "/public/build/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/api/index.php"
    }
  ]
}